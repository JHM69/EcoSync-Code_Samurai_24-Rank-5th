<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="?android:windowBackground"    app:layoutDescription="@xml/fragmengt_about_scene">    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/hdrh"        android:layout_width="match_parent"        android:layout_height="0dp"        android:visibility="visible"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/pieChart"        app:layout_constraintVertical_bias="0.0" />    <LinearLayout        android:id="@+id/constraintLayout2"        android:layout_width="match_parent"        android:layout_height="0dp"        android:background="?colorPrimary"        android:orientation="vertical"        android:paddingBottom="4dp"        app:layout_constraintBottom_toBottomOf="@+id/bio"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintHorizontal_bias="1.0"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:layout_constraintVertical_bias="0.391" />    <com.github.mikephil.charting.charts.PieChart        android:id="@+id/pieChart"        android:layout_width="0dp"        android:layout_height="200dp"        android:layout_marginTop="8dp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/friend_yes" />    <TextView        android:id="@+id/friends"        style="@android:style/Widget.DeviceDefault.Light.TextView"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginEnd="8dp"        android:backgroundTint="@color/white"        android:fontFamily="@font/regular"        android:gravity="center|center_vertical"        android:textColor="@color/white"        android:textSize="14sp"        android:visibility="visible"        app:drawableLeftCompat="@drawable/ic_friend"        app:drawableTint="@color/white"        app:layout_constraintBottom_toTopOf="@+id/posts"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toBottomOf="@+id/win"        tools:ignore="HardcodedText,UnusedAttribute" />    <TextView        android:id="@+id/levelJ"        style="@android:style/Widget.DeviceDefault.Light.TextView"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:drawableStart="@drawable/ic_baseline_bar_chart_24"        android:drawableTint="@color/white"        android:fontFamily="@font/regular"        android:gravity="center_vertical"        android:textColor="@color/white"        android:textSize="14sp"        app:layout_constraintBottom_toBottomOf="@+id/posts"        app:layout_constraintEnd_toEndOf="@+id/scoreJ"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintStart_toStartOf="@+id/scoreJ"        app:layout_constraintTop_toBottomOf="@+id/scoreJ"        tools:ignore="HardcodedText,UnusedAttribute,UseCompatTextViewDrawableXml" />    <Button        android:id="@+id/friend_yes"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:layout_marginTop="8dp"        android:backgroundTint="@color/colorSec"        android:drawableLeft="@drawable/ic_unfriend"        android:fontFamily="@font/regular"        android:text="Unfriend"        android:textAllCaps="false"        android:textColor="@color/white"        android:visibility="gone"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"        tools:ignore="HardcodedText,RtlHardcoded" />    <Button        android:id="@+id/friend_no"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_gravity="center"        android:backgroundTint="@color/colorSec"        android:drawableLeft="@drawable/ic_add_friend"        android:fontFamily="@font/regular"        android:text="Add Friend"        android:textAllCaps="false"        android:textColor="@color/white"        android:visibility="gone"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/friend_yes"        tools:ignore="HardcodedText,RtlHardcoded" />    <LinearLayout        android:id="@+id/friend_req"        android:layout_width="match_parent"        android:layout_height="80dp"        android:orientation="vertical"        android:visibility="gone"        app:layout_constraintBottom_toTopOf="@+id/hdrh"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="@+id/friend_yes">        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:layout_marginTop="0dp"            android:fontFamily="@font/regular"            android:gravity="center_horizontal"            android:text="Wants to be your Friend"            tools:ignore="HardcodedText" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="horizontal"            android:visibility="visible">            <Button                android:id="@+id/decline"                style="@style/Widget.MaterialComponents.Button.OutlinedButton"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_margin="5dp"                android:layout_weight="1"                android:text="Decline"                android:textAllCaps="false"                android:textColor="?android:textColorPrimary"                tools:ignore="HardcodedText" />            <Button                android:id="@+id/accept"                style="@style/Widget.MaterialComponents.Button"                android:layout_width="0dp"                android:layout_height="wrap_content"                android:layout_margin="5dp"                android:layout_weight="1"                android:backgroundTint="@color/colorSec"                android:drawableLeft="@drawable/ef_ic_done_white"                android:fontFamily="@font/regular"                android:text="Accept"                android:textAllCaps="false"                android:textColor="#ffffff"                tools:ignore="HardcodedText,RtlHardcoded" />        </LinearLayout>    </LinearLayout>    <ImageView        android:id="@+id/playBtn"        android:layout_width="70dp"        android:layout_height="70dp"        android:background="@drawable/round_background"        android:clickable="true"        android:elevation="5dp"        android:padding="10dp"        android:visibility="visible"        app:backgroundTint="?colorPrimary"        app:fabSize="auto"        app:layout_constraintBottom_toTopOf="@+id/hdrh"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="@+id/pieChart"        app:layout_constraintTop_toBottomOf="@+id/friend_yes"        app:layout_constraintVertical_bias="0.38"        app:srcCompat="@drawable/ic_flash_on_black_24dp"        app:tint="@color/white"        tools:ignore="ContentDescription,KeyboardInaccessibleWidget" />    <TextView        android:id="@+id/win"        style="@android:style/Widget.DeviceDefault.Light.TextView"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginEnd="8dp"        android:backgroundTint="@color/white"        android:fontFamily="@font/regular"        android:gravity="center|center_vertical"        android:textColor="@color/white"        android:textSize="14sp"        android:visibility="visible"        app:drawableLeftCompat="@drawable/win"        app:drawableTint="@color/white"        app:layout_constraintBottom_toTopOf="@+id/friends"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toTopOf="@+id/profile_pic"        tools:ignore="HardcodedText,UnusedAttribute" />    <TextView        android:id="@+id/scoreJ"        style="@android:style/Widget.DeviceDefault.Light.TextView"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="8dp"        android:drawableStart="@drawable/ic_flash_on_black_24dp"        android:drawableTint="@color/white"        android:fontFamily="@font/regular"        android:gravity="center_vertical"        android:textColor="@color/white"        android:textSize="14sp"        app:layout_constraintBottom_toTopOf="@+id/levelJ"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="@+id/win"        tools:ignore="HardcodedText,UnusedAttribute,UseCompatTextViewDrawableXml" />    <TextView        android:id="@+id/posts"        style="@android:style/Widget.DeviceDefault.Light.TextView"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginEnd="8dp"        android:drawableStart="@drawable/ic_notes_black_24dp"        android:drawableTint="@color/white"        android:fontFamily="@font/regular"        android:gravity="center|center_vertical"        android:paddingBottom="7dp"        android:textColor="@color/white"        android:textSize="14sp"        android:visibility="visible"        app:layout_constraintBottom_toBottomOf="@+id/friend_yes"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toBottomOf="@+id/friends"        tools:ignore="HardcodedText,UseCompatTextViewDrawableXml"        tools:targetApi="m" />    <TextView        android:id="@+id/bio"        style="@android:style/Widget.DeviceDefault.Light.TextView"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginStart="8dp"        android:layout_marginEnd="8dp"        android:drawableStart="@drawable/bio"        android:fontFamily="@font/regular"        android:gravity="center_vertical"        android:maxLines="1"        android:paddingBottom="2dp"        android:textColor="@color/white"        android:textSize="12sp"        app:layout_constraintEnd_toStartOf="@+id/posts"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintStart_toEndOf="@+id/levelJ"        app:layout_constraintTop_toBottomOf="@+id/location"        tools:ignore="HardcodedText,UnusedAttribute,UseCompatTextViewDrawableXml" />    <TextView        android:id="@+id/name"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_below="@+id/profile_pic"        android:layout_centerHorizontal="true"        android:layout_marginStart="36dp"        android:layout_marginEnd="36dp"        android:fontFamily="@font/regular"        android:gravity="center"        android:maxLines="1"        android:paddingBottom="2dp"        android:text="Loading name..."        android:textAlignment="center"        android:textColor="@color/white"        android:textSize="19sp"        android:visibility="visible"        app:layout_constraintBottom_toTopOf="@+id/email"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/profile_pic"        app:layout_constraintVertical_bias="0.0"        app:layout_constraintVertical_chainStyle="packed"        tools:ignore="HardcodedText" />    <de.hdodenhof.circleimageview.CircleImageView        android:id="@+id/profile_pic"        android:layout_width="120dp"        android:layout_height="120dp"        android:layout_alignParentTop="true"        android:layout_centerHorizontal="true"        android:src="@drawable/ic_logo"        android:visibility="visible"        app:civ_border_color="@color/colorPrimaryy"        app:civ_border_width="0dp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <TextView        android:id="@+id/location"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@+id/username"        android:layout_centerHorizontal="true"        android:drawableStart="@drawable/ic_location_on_black_24dp"        android:drawablePadding="3dp"        android:gravity="center_vertical"        android:paddingBottom="2dp"        android:textColor="@color/white"        android:textSize="12sp"        android:visibility="visible"        app:layout_constraintEnd_toEndOf="@+id/name"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintStart_toStartOf="@+id/name"        app:layout_constraintTop_toBottomOf="@+id/email"        tools:ignore="UnknownIdInLayout,UseCompatTextViewDrawableXml" />    <TextView        android:id="@+id/institute_about"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@+id/location"        android:layout_centerHorizontal="true"        android:drawableStart="@drawable/ic_baseline_school_24"        android:drawablePadding="5dp"        android:fontFamily="sans-serif-medium"        android:gravity="center_vertical"        android:maxLines="1"        android:paddingBottom="2dp"        android:textColor="@color/white"        android:textSize="12sp"        android:visibility="visible"        app:layout_constraintEnd_toEndOf="@+id/name"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintStart_toStartOf="@+id/name"        app:layout_constraintTop_toBottomOf="@+id/name"        app:layout_constraintVertical_chainStyle="packed"        tools:ignore="MissingConstraints,UseCompatTextViewDrawableXml" />    <TextView        android:id="@+id/email"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@+id/location"        android:visibility="gone"        app:layout_constraintEnd_toEndOf="@+id/name"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintStart_toStartOf="@+id/name"        app:layout_constraintTop_toBottomOf="@+id/institute_about"        tools:ignore="MissingConstraints,UseCompatTextViewDrawableXml" />    <TextView        android:id="@+id/friend_sent"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:gravity="center"        android:padding="8dp"        android:textAllCaps="false"        android:textColor="?colorAccent"        android:textSize="17sp"        android:visibility="visible"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/friend_yes" /></androidx.constraintlayout.motion.widget.MotionLayout>