<?xml version="1.0" encoding="utf-8"?><MotionScene xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:motion="http://schemas.android.com/apk/res-auto">    <Transition        motion:constraintSetEnd="@+id/end"        motion:constraintSetStart="@id/start"        motion:duration="1000">        <KeyFrameSet />        <OnSwipe motion:touchAnchorId="@+id/hdrh" />    </Transition>    <ConstraintSet android:id="@+id/start">        <Constraint            android:layout_height="wrap_content"            motion:layout_constraintHorizontal_bias="0.5"            motion:layout_constraintEnd_toEndOf="@+id/name"            android:layout_width="wrap_content"            motion:visibilityMode="ignore"            motion:layout_constraintTop_toBottomOf="@+id/name"            motion:layout_constraintStart_toStartOf="@+id/name"            motion:layout_constraintVertical_chainStyle="packed"            android:id="@+id/institute_about" />        <Constraint            android:layout_height="wrap_content"            motion:layout_constraintStart_toStartOf="@+id/name"            motion:layout_constraintHorizontal_bias="0.5"            motion:layout_constraintEnd_toEndOf="@+id/name"            android:layout_width="wrap_content"            android:id="@+id/email"            motion:layout_constraintTop_toBottomOf="@+id/institute_about"            android:visibility="gone" />        <Constraint            android:layout_height="wrap_content"            motion:layout_constraintStart_toStartOf="@+id/name"            motion:layout_constraintHorizontal_bias="0.5"            motion:layout_constraintEnd_toEndOf="@+id/name"            android:layout_width="wrap_content"            android:id="@+id/location"            motion:visibilityMode="ignore"            motion:layout_constraintTop_toBottomOf="@+id/email" />        <Constraint            android:layout_marginEnd="8dp"            android:layout_height="wrap_content"            motion:layout_constraintHorizontal_bias="0.5"            android:layout_width="wrap_content"            motion:layout_constraintEnd_toStartOf="@+id/posts"            motion:layout_constraintStart_toEndOf="@+id/levelJ"            android:layout_marginStart="8dp"            android:id="@+id/bio"            motion:layout_constraintTop_toBottomOf="@+id/location" />        <Constraint            android:id="@+id/constraintLayout2"            motion:layout_constraintEnd_toEndOf="parent"            android:layout_width="match_parent"            android:layout_height="0dp"            motion:layout_constraintBottom_toBottomOf="@+id/bio"            motion:layout_constraintTop_toTopOf="parent"            motion:layout_constraintStart_toStartOf="parent" />        <Constraint            android:id="@+id/constraintLayout2"            motion:layout_constraintEnd_toEndOf="parent"            android:layout_width="match_parent"            android:layout_height="0dp"            motion:layout_constraintBottom_toBottomOf="@+id/bio"            motion:layout_constraintTop_toTopOf="parent"            motion:layout_constraintStart_toStartOf="parent" />        <Constraint            motion:layout_constraintEnd_toEndOf="parent"            android:layout_width="0dp"            android:layout_height="220dp"            motion:layout_constraintStart_toStartOf="parent"            android:id="@+id/pieChart"            motion:layout_constraintTop_toBottomOf="@+id/friend_req"            motion:layout_constraintBottom_toTopOf="@+id/hdrh" />        <Constraint            motion:layout_constraintEnd_toEndOf="parent"            android:layout_width="120dp"            android:layout_height="120dp"            android:visibility="visible"            motion:layout_constraintTop_toTopOf="parent"            motion:layout_constraintStart_toStartOf="parent"            android:layout_marginTop="0dp"            android:id="@+id/profile_pic" />        <Constraint            android:id="@+id/friend_req"            motion:layout_constraintEnd_toEndOf="parent"            android:layout_width="match_parent"            android:layout_height="80dp"            android:visibility="gone"            motion:visibilityMode="ignore"            motion:layout_constraintStart_toStartOf="parent"            motion:layout_constraintTop_toBottomOf="@+id/friend_no"            motion:layout_constraintBottom_toTopOf="@+id/pieChart" />        <Constraint            android:id="@+id/friend_yes"            motion:layout_constraintEnd_toEndOf="parent"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:visibility="gone"            motion:visibilityMode="ignore"            motion:layout_constraintTop_toBottomOf="@+id/friend_sent"            motion:layout_constraintStart_toStartOf="parent"            motion:layout_constraintBottom_toTopOf="@+id/friend_no" />        <Constraint            android:id="@+id/friend_no"            motion:layout_constraintEnd_toEndOf="parent"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:visibility="gone"            motion:visibilityMode="ignore"            motion:layout_constraintStart_toStartOf="parent"            motion:layout_constraintTop_toBottomOf="@+id/friend_yes"            motion:layout_constraintBottom_toTopOf="@+id/friend_req" />        <Constraint            motion:layout_constraintEnd_toEndOf="parent"            android:layout_width="match_parent"            android:layout_height="0dp"            motion:layout_constraintBottom_toBottomOf="parent"            android:visibility="visible"            motion:layout_constraintStart_toStartOf="parent"            android:id="@+id/hdrh"            motion:layout_constraintTop_toBottomOf="@+id/pieChart" />        <Constraint            android:id="@+id/playBtn"            android:elevation="5dp"            motion:layout_constraintEnd_toEndOf="parent"            android:layout_width="70dp"            motion:visibilityMode="ignore"            android:layout_height="70dp"            android:visibility="visible"            motion:layout_constraintBottom_toTopOf="@+id/hdrh"            motion:layout_constraintVertical_bias="0.38"            motion:layout_constraintStart_toStartOf="@+id/pieChart"            motion:layout_constraintTop_toTopOf="@+id/pieChart" />        <Constraint            android:layout_height="wrap_content"            motion:layout_constraintStart_toStartOf="parent"            motion:layout_constraintHorizontal_bias="0.0"            motion:layout_constraintEnd_toEndOf="parent"            android:layout_width="0dp"            android:visibility="visible"            motion:visibilityMode="ignore"            motion:layout_constraintTop_toBottomOf="@+id/constraintLayout2"            android:id="@+id/friend_sent"            motion:layout_constraintBottom_toTopOf="@+id/friend_yes" />        <Constraint            android:layout_marginEnd="8dp"            android:layout_height="wrap_content"            motion:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"            motion:layout_constraintEnd_toEndOf="parent"            android:layout_width="wrap_content"            motion:layout_constraintTop_toBottomOf="@+id/friends"            android:id="@+id/posts" />        <Constraint            android:id="@+id/name"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:visibility="visible"            motion:layout_constraintBottom_toTopOf="@+id/email"            motion:layout_constraintVertical_bias="0.0"            android:layout_marginEnd="36dp"            motion:layout_constraintTop_toBottomOf="@+id/profile_pic"            motion:layout_constraintVertical_chainStyle="packed"            motion:layout_constraintStart_toStartOf="parent"            motion:layout_constraintEnd_toEndOf="parent"            android:layout_marginStart="36dp"            motion:transitionEasing="linear">            <CustomAttribute                motion:attributeName="textAlignment"                motion:customIntegerValue="4" />            <CustomAttribute                motion:attributeName="gravity"                motion:customIntegerValue="0x11" />        </Constraint>    </ConstraintSet>    <ConstraintSet android:id="@+id/end">        <Constraint            android:id="@+id/profile_pic"            android:layout_width="60dp"            android:layout_height="60dp"            android:visibility="visible"            motion:layout_constraintTop_toTopOf="parent"            motion:layout_constraintStart_toStartOf="parent"            android:layout_marginTop="8dp" />        <Constraint            android:id="@+id/profile_pic"            android:layout_width="60dp"            android:layout_height="60dp"            android:visibility="visible"            motion:layout_constraintTop_toTopOf="parent"            motion:layout_constraintStart_toStartOf="parent"            android:layout_marginTop="0dp"            android:layout_marginStart="8dp" />        <Constraint            android:layout_height="wrap_content"            motion:layout_constraintTop_toTopOf="@+id/profile_pic"            android:layout_width="0dp"            motion:layout_constraintStart_toEndOf="@+id/profile_pic"            motion:layout_constraintVertical_chainStyle="packed"            android:id="@+id/name"            android:layout_marginStart="8dp">            <CustomAttribute                motion:attributeName="textAlignment"                motion:customIntegerValue="2" />            <CustomAttribute                motion:attributeName="gravity"                motion:customIntegerValue="0x03" />        </Constraint>        <Constraint            android:layout_height="wrap_content"            android:layout_width="wrap_content"            motion:layout_constraintStart_toEndOf="@+id/profile_pic"            android:id="@+id/institute_about"            motion:visibilityMode="ignore"            motion:layout_constraintTop_toBottomOf="@+id/name"            android:layout_marginStart="8dp"            motion:layout_constraintBottom_toBottomOf="@+id/profile_pic" />        <Constraint            android:layout_height="wrap_content"            android:layout_width="wrap_content"            android:id="@+id/location"            motion:visibilityMode="ignore"            motion:layout_constraintTop_toTopOf="@+id/institute_about"            motion:layout_constraintStart_toEndOf="@+id/institute_about"            android:layout_marginStart="8dp"            motion:layout_constraintBottom_toBottomOf="@+id/institute_about"            motion:layout_constraintEnd_toEndOf="@+id/constraintLayout2"            android:layout_marginEnd="8dp"            motion:layout_constraintHorizontal_bias="0.0" />        <Constraint            android:id="@+id/bio"            motion:layout_constraintEnd_toStartOf="@+id/posts"            motion:layout_constraintStart_toEndOf="@+id/levelJ"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginEnd="8dp"            motion:layout_constraintTop_toBottomOf="@+id/email"            android:layout_marginStart="8dp"            motion:layout_constraintHorizontal_bias="0.5"            android:visibility="gone" />        <Constraint            android:id="@+id/email"            motion:layout_constraintEnd_toEndOf="@+id/name"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:visibility="gone"            motion:layout_constraintBottom_toTopOf="@+id/bio"            motion:layout_constraintTop_toBottomOf="@+id/location"            motion:layout_constraintHorizontal_bias="0.5"            motion:layout_constraintStart_toStartOf="@+id/name" />        <Constraint            android:layout_height="wrap_content"            android:layout_width="wrap_content"            android:id="@+id/win"            motion:layout_constraintStart_toEndOf="@+id/levelJ"            motion:layout_constraintTop_toTopOf="@+id/levelJ"            motion:layout_constraintEnd_toStartOf="@+id/friends" />        <Constraint            android:layout_height="wrap_content"            android:layout_width="wrap_content"            android:id="@+id/posts"            motion:layout_constraintTop_toTopOf="@+id/friends"            motion:layout_constraintStart_toEndOf="@+id/friends"            motion:layout_constraintEnd_toEndOf="parent" />        <Constraint            android:layout_height="wrap_content"            android:layout_width="wrap_content"            android:id="@+id/scoreJ"            motion:layout_constraintEnd_toStartOf="@+id/levelJ"            motion:layout_constraintStart_toStartOf="parent"            motion:layout_constraintTop_toBottomOf="@+id/profile_pic"            android:layout_marginTop="8dp" />        <Constraint            android:layout_height="wrap_content"            android:layout_width="wrap_content"            android:id="@+id/levelJ"            motion:layout_constraintStart_toEndOf="@+id/scoreJ"            motion:layout_constraintTop_toTopOf="@+id/scoreJ"            motion:layout_constraintEnd_toStartOf="@+id/win" />        <Constraint            android:layout_height="0dp"            motion:layout_constraintStart_toStartOf="parent"            motion:layout_constraintTop_toTopOf="parent"            motion:layout_constraintEnd_toEndOf="parent"            android:layout_width="match_parent"            android:id="@+id/constraintLayout2"            motion:layout_constraintBottom_toBottomOf="@+id/posts" />        <Constraint            android:layout_height="wrap_content"            android:layout_width="wrap_content"            android:id="@+id/friends"            motion:layout_constraintTop_toTopOf="@+id/win"            motion:layout_constraintStart_toEndOf="@+id/win"            motion:layout_constraintEnd_toStartOf="@+id/posts" />        <Constraint            motion:layout_constraintEnd_toEndOf="parent"            android:layout_width="0dp"            android:layout_height="0.01dp"            motion:layout_constraintTop_toBottomOf="@+id/friend_yes"            motion:layout_constraintStart_toStartOf="parent"            android:id="@+id/pieChart"            android:layout_marginTop="8dp"            motion:layout_constraintBottom_toBottomOf="@+id/friend_yes" />        <Constraint            android:id="@+id/playBtn"            android:elevation="5dp"            motion:layout_constraintEnd_toEndOf="parent"            android:layout_width="70dp"            android:layout_height="70dp"            android:visibility="gone"            motion:layout_constraintBottom_toTopOf="@+id/hdrh"            motion:layout_constraintVertical_bias="0.38"            motion:layout_constraintTop_toBottomOf="@+id/pieChart"            motion:layout_constraintStart_toStartOf="@+id/pieChart" />        <Constraint            android:layout_height="wrap_content"            motion:layout_constraintStart_toStartOf="parent"            motion:layout_constraintHorizontal_bias="0.0"            motion:layout_constraintEnd_toEndOf="parent"            android:layout_width="0dp"            android:visibility="gone"            motion:layout_constraintTop_toBottomOf="@+id/constraintLayout2"            android:id="@+id/friend_sent"            motion:layout_constraintBottom_toTopOf="@+id/friend_yes" />    </ConstraintSet></MotionScene>